
pipeline {

	agent any
	
	 tools {
        maven 'MAVEN_HOME' 
        jdk 'JAVA_HOME'
    }

	stages {
	
	stage('Cheking initialization') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
            }
        }
        
		
		stage('Compile Stage') {
			steps {
			withMaven(maven:'MAVEN_HOME'){
					sh 'mvn clean compile'
					}
				
			}
		}
		
		stage('Testing Stage') {
			steps {
			withMaven(maven:'MAVEN_HOME'){
					sh 'mvn test'
					}
			}
		}
		
		stage('Deployment Stage') {
			steps {
			withMaven(maven:'MAVEN_HOME'){
					//sh 'mvn deploy'
					echo 'Deployment is going on'
					}
			}
		}
		

	}
	
}